<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!-- ===================================================================== -->
<!--                                                                       -->
<!--  Log4j Configuration                                                  -->
<!--                                                                       -->
<!-- ===================================================================== -->
<!--
   | For more configuration infromation and examples see the Jakarta Log4j
   | owebsite: http://jakarta.apache.org/log4j
 -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
	<appender name="gecomp" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="${catalina.home}/logs/GeComp/gecomp.log"/>
        <param name="MaxFileSize" value="10000KB"/>
        <param name="MaxBackupIndex" value="10"/>
        <layout class="org.apache.log4j.PatternLayout">
        	<param name="ConversionPattern" value="%d %-5p [%t] [%C.%M] :::%m%n"/>
        </layout>
	</appender>
	<appender name="gecomporm" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="${catalina.home}/logs/GeComp/gecomporm.log"/>
  		<param name="MaxFileSize" value="10000KB"/>
  		<param name="MaxBackupIndex" value="10"/>
  		<layout class="org.apache.log4j.PatternLayout">
    		<param name="ConversionPattern" value="%d %-5p [%t] [%C.%M] :::%m%n"/>
  		</layout>
	</appender>
	<appender name="gecompweb" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="${catalina.home}/logs/GeComp/gecompweb.log"/>
  		<param name="MaxFileSize" value="10000KB"/>
  		<param name="MaxBackupIndex" value="10"/>
  		<layout class="org.apache.log4j.PatternLayout">
    		<param name="ConversionPattern" value="%d %-5p [%t] [%C.%M] :::%m%n"/>
  		</layout>
	</appender>	
	<appender name="sql" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="${catalina.home}/logs/GeComp/sql.log"/>
        <param name="MaxFileSize" value="10000KB"/>
        <param name="MaxBackupIndex" value="10"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%t] [%C.%M] :::%m%n"/>
        </layout>
	</appender>
	<appender name="ibatis" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="${catalina.home}/logs/GeComp/ibatis.log"/>
        <param name="MaxFileSize" value="10000KB"/>
        <param name="MaxBackupIndex" value="10"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%t] [%C.%M] :::%m%n"/>
        </layout>
	</appender>

 	<!-- ======================= -->
	<!-- Gecomp categories -->
	<!-- ======================= -->
	<category name="net.sb.gecomp">
        <priority value="DEBUG"/>
        <appender-ref ref="gecomp"/>
    </category>
	<category name="org.sbelli.gecomp">
        <priority value="DEBUG"/>
        <appender-ref ref="gecomp"/>
    </category>
    
    <!-- orm -->
	<category name="org.sbelli.gecomp.orm">
        <priority value="DEBUG"/>
        <appender-ref ref="gecomporm"/>
    </category>
    
    <!-- web -->
	<category name="org.sbelli.gecomp.console">
        <priority value="DEBUG"/>
        <appender-ref ref="gecompweb"/>
    </category>
    <category name="net.sb.gecomp.web">
        <priority value="DEBUG"/>
        <appender-ref ref="gecompweb"/>
    </category>
    
	<root><appender-ref ref="gecomp"/></root>
	
</log4j:configuration>
