<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    
	
	<!-- Datasource preso da file di properties -->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:org/sbelli/gecomp/orm/ibatis/SqlMapConfig.properties" />
    </bean>
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${driver}" />
        <property name="url" value="${url}" />
        <property name="username" value="${username}" />
        <property name="password" value="${password}" />
    </bean>
	
    <bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="dataSource">
            <ref bean="dataSource" />
        </property>
        <property name="useTransactionAwareDataSource">
            <value>true</value>
        </property>
        <property name="configLocation">
            <value>${sqlMapConfig.url}</value>
        </property>
    </bean>
	
    <bean id="dataBaseDao" class="org.sbelli.gecomp.orm.ibatis.DataBaseDao">
       <property name="sqlMapClient">
            <ref bean="sqlMapClient" />
        </property>
    </bean>
    <bean id="DbManager" 				class="org.sbelli.gecomp.orm.ibatis.DbManager" 				singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="AtletaDao" 				class="org.sbelli.gecomp.orm.dao.AtletaDao" 				singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="CategoriaGaraDao"         class="org.sbelli.gecomp.orm.dao.CategoriaGaraDao" 	        singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="CategoriaDao" 			class="org.sbelli.gecomp.orm.dao.CategoriaDao" 				singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="CompetizioneDao" 			class="org.sbelli.gecomp.orm.dao.CompetizioneDao" 			singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="GaraDao" 					class="org.sbelli.gecomp.orm.dao.GaraDao" 					singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="IscrizioneDao" 			class="org.sbelli.gecomp.orm.dao.IscrizioneDao" 			singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="PrestazioneDao" 			class="org.sbelli.gecomp.orm.dao.PrestazioneDao" 			singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="TipoPrestazioneDao" 		class="org.sbelli.gecomp.orm.dao.TipoPrestazioneDao" 		singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="TipoMisuraDao" 			class="org.sbelli.gecomp.orm.dao.TipoMisuraDao" 			singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="PropertiesDao" 			class="org.sbelli.gecomp.orm.dao.PropertiesDao" 			singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="SocietaDao" 				class="org.sbelli.gecomp.orm.dao.SocietaDao" 				singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>
	<bean id="UserDao" 					class="org.sbelli.gecomp.orm.dao.UserDao" 					singleton="true"><property name="dataBaseDao"><ref bean="dataBaseDao" /></property></bean>		
    
</beans>
